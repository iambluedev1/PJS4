<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity"
    >
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="69dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        android:text="Ecolo App"
        android:textColor="#1F5520"
        android:textSize="55sp"
        app:fontFamily="cursive"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:text="Inscrivez-vous!" />

    <TextView
        android:id="@+id/textView3"
        android:layout_height="35dp"
        android:layout_width="170dp"
        app:layout_constraintLeft_toLeftOf="@id/input_login"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:text="Login" />

    <EditText
        android:id="@+id/input_login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="194dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/input_login"
        app:layout_constraintLeft_toLeftOf="@id/input_login"
        android:text="Mot de passe" />

    <EditText
        android:id="@+id/input_mdp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/input_mdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Confirmez votre mot de passe" />




    <EditText
        android:id="@+id/input_mdp2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="@id/input_mdp"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        android:inputType="textPassword"/>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/input_mdp2"
        app:layout_constraintTop_toBottomOf="@id/input_mdp2"
        android:text="Email" />

    <EditText
        android:id="@+id/input_mail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintLeft_toLeftOf="@id/textView7"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="162dp"
        android:layout_height="64dp"
        android:layout_marginTop="30dp"
        android:text="Valider"
        app:layout_constraintTop_toBottomOf="@id/input_mail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>